<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <!-- put deps in the lib folder -->
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>libs</outputDirectory>
            <unpack>false</unpack>
            <excludes>
                <exclude>
                    com.hortonworks.registries:schema-registry-ranger-plugin
                </exclude>
                <exclude>
                    com.hortonworks.registries:schema-registry-ranger-authorizer
                </exclude>
                <exclude>
                    com.hortonworks.registries:schema-registry-ranger-authorizer-shim
                </exclude>
                <exclude>
                    com.sun.jersey:jersey-servlet
                </exclude>
                <exclude>
                    com.sun.jersey
                </exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!--
            $REGISTRY_HOME/bin
        -->
        <fileSet>
            <directory>${project.basedir}./bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <!--
            $REGISTRY_HOME/bootstrap
        -->
        <fileSet>
            <directory>${project.basedir}./bootstrap</directory>
            <outputDirectory>bootstrap</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./storage/tool/target</directory>
            <outputDirectory>/bootstrap/lib</outputDirectory>
            <includes>
                <include>storage-tool*jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}./storage/core/target/dependency</directory>
            <outputDirectory>/libs</outputDirectory>
            <includes>
                <include>postgresql*</include>
            </includes>
        </fileSet>

        <!--
            EXAMPLES
        -->
        <fileSet>
            <directory>${project.basedir}./examples/schema-registry/avro/target</directory>
            <outputDirectory>examples/schema-registry/avro</outputDirectory>
            <includes>
                <include>avro*jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./examples/schema-registry/serdes/target</directory>
            <outputDirectory>examples/schema-registry/serdes</outputDirectory>
            <includes>
                <include>serdes*jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./examples/schema-registry/avro/src/main/resources</directory>
            <outputDirectory>examples/schema-registry/avro/data</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <!--
            RANGER-PLUGIN/AUTHORIZER
        -->
        <fileSet>
            <directory>${project.basedir}./schema-registry/authorizer/ranger-plugin/ranger-authorizer/target</directory>
            <outputDirectory>ranger-plugin/ranger-schema-registry-plugin-impl</outputDirectory>
            <includes>
                <include>*jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./schema-registry/authorizer/ranger-plugin/ranger-authorizer/conf</directory>
            <outputDirectory>ranger-plugin/conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}./schema-registry/authorizer/ranger-plugin/ranger-authorizer/target/schema-registry-ranger-authorizer-${project.version}/schema-registry-ranger-authorizer-${project.version}</directory>
            <outputDirectory>ranger-plugin/ranger-schema-registry-plugin-impl</outputDirectory>
            <includes>
                <include>*jar</include>
            </includes>
        </fileSet>
        <!--
            RANGER-PLUGIN/AUTHORIZER-SHIM
        -->
        <fileSet>
            <directory>${project.basedir}./schema-registry/authorizer/ranger-plugin/ranger-authorizer-shim/target</directory>
            <outputDirectory>ranger-plugin</outputDirectory>
            <includes>
                <include>*jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}./README.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}./LICENSE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}./NOTICE.txt</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

</assembly>
